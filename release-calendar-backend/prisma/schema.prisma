datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ReleaseType {
  movie
  tv
}

model Genre {
  id       Int       @id @default(autoincrement())
  tmdbId   Int       @unique
  name     String
  releases Release[] @relation("ReleaseGenres")
}

model Release {
  id           Int       @id @default(autoincrement())
  tmdbId       Int       @unique
  title        String
  type         ReleaseType
  releaseDate  DateTime
  overview     String?
  posterPath   String?
  genres       Genre[]   @relation("ReleaseGenres")
}
